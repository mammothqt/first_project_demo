<p id="notice"><%= notice %></p>

<h1><%= "Test" %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= link_to test.name, test_path(test) %></td>
        <td><%= test.description %></td>
        <% if can? :destroy, test %>
          <td><%= link_to "Delete", test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @test %>
  <%= link_to "New Test", new_test_path %>
<% end %>

<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="span4">
    <section>
	  <h1>
		<%= "Test: "%>
		<%= @test.name %>
	  </h1>
	  <%= @test.description %>
	</section>
  </aside>
  <div class="span8">
	<% @test.questions.each do |question| %>
	  <ol class="question">
	    <%= render question %>
	  </ol>
	<% end %>
  </div>
</div>

<% if signed_in? %>
	<%= link_to "Start the Test", new_user_result_path(:test_id => @test.id) %> |
<% end %>

<%= link_to "Back", tests_path %>
<% if can? :update, @test %>
  | <%= link_to "Edit Test", edit_test_path(@test) %>
<% end %>

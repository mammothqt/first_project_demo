<p id="notice"><%= notice %></p>

<h1><%= "Categories" %></h1>
<h2><%= "Courses" %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= link_to "Show", category_course_path(@category, course) %></td>
        <td><%= link_to "Edit", edit_category_course_path(@category, course) %></td>
        <td><%= link_to "Delete", category_course_path(@category, course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New", new_category_course_path(@category) %>
<%= link_to "Back", categories_path %>
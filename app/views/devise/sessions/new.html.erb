<h2><%= t('.log_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3 text-center'>
      <div class='form-group'>
        <%= f.label :user_name, t('.user_name') %><br />
        <%= f.text_field :user_name, autofocus: true, class: 'form-control text-center' %>
      </div>

      <div class='form-group'>
        <%= f.label :password, t('.password') %><br />
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control text-center' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class='form-group'>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('.remember_me') %>
        </div>
      <% end %>

      <div class='actions'>
        <%= f.submit t('.submit'), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'devise/shared/links' %>

<div class="intro">
  <div class="row d-flex justify-content-center">
    <% unless signed_in? %>
  	  <div id="main-text-home">
	    <h1><%= t(".page_name") %></h1>
	    <h2><%= t(".description") %></h2>
	    <a>
	  	  <%= link_to t(".sign_up"), new_user_registration_path, class: "btn btn-success btn-primary" %>
	    </a>
	  </div>
	<% else %>
	  <h1><%= current_user.user_name %></h1>
	  <div class="container">
	    <div class="row text-center">
	  	  <div class="col col-md-6">
	  	  	<h3><%= t(".full_name") %></h3>
	  	  </div>
	  	  <div class="col col-md-6">
	  	  	<h3><%= current_user.full_name %></h3>
	  	  </div>
	  	</div>
	  	<div class="row text-center">
	  	  <div class="col col-md-6">
	  	    <h3><%= t(".email") %></h3>
	  	  </div>
	  	  <div class="col col-md-6">
	  	  	<h3><%= current_user.email %></h3>
	  	  </div>
	  	</div>
	  	<div class="row text-center">
	  	  <div class="col col-md-6">
	  	    <h3><%= t(".age") %></h3>
	  	  </div>
	  	  <div class="col col-md-6">
	  	    <h3><%= current_user.age %></h3>
	  	  </div>
	  	</div>
	  	<div class="row text-center">
	  	  <div class="col col-md-6">
	  	    <h3><%= t(".gender") %></h3>
	  	  </div>
	  	  <div class="col col-md-6">
	  	    <h3><%= current_user.gender %></h3>
	  	  </div>
	    </div>
	  </div>
	<% end %>
  </div>
</div>
